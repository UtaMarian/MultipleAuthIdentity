@model MultipleAuthIdentity.Models.Reviews
@{
    ViewData["Title"] = "Reviews page";
}
<style>
    .review-container {
        border: 1px solid #ddd;
        padding: 20px;
        margin-bottom: 20px;
    }

    .review-header {
        display: flex;
        align-items: center;
    }

    .review-title {
        margin-right: 10px;
    }

    .review-rating {
        background-color: forestgreen;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: bold;
    }

    .review-body {
        margin-top: 10px;
    }

    .review-footer {
        margin-top: 10px;
        font-size: 12px;
        color: #aaa;
    }

    .review-author {
        margin-right: 10px;
    }

</style>
<h1>@ViewData["Title"]</h1>

