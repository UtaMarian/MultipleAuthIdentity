<!DOCTYPE html>
<html>
<head>
    <title>Contact Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Contact Us</h1>
        <form id="contactForm" asp-controller="Home" asp-action="ContactPost">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea class="form-control" id="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary" onclick="handleResponse()">Trimite</button>
        </form>
        <div id="successMessage" style="display: none;">
            <div class="alert alert-success" role="alert">
                Message sent successfully!
            </div>
        </div>
        <div id="errorMessage" style="display: none;">
            <div class="alert alert-danger" role="alert">
                Failed to send message. Please try again.
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 
    <script>
        $(document).ready(function () {
            $("#contactForm").submit(function (event) {
                event.preventDefault();
                const msg = document.createElement("h4");
                const container = document.getElementById("message");
                msg.innerHTML = "Mesajul a fost transmis la echipa de suport! Va vor trimite un mesaj pe email in cel mai scurt timp";
                msg.style.backgroundColor = "lightgreen";
                msg.style.font = "bold";
               
            });
        });

        function handleResponse(){
            const msg = document.createElement("h4");
            const container = document.getElementById("message");
            msg.innerHTML = "Mesajul a fost transmis la echipa de suport! Va vor trimite un mesaj pe email in cel mai scurt timp";
            msg.style.backgroundColor = "lightgreen";
            msg.style.font = "bold";
        }
    </script>
</body>
</html>
