@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/home.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            flex-direction: row;
            height: 90vh;
        }

        .image {
            width: 100% !important;
            height: 100%;
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .content {
            width: 100%;
            height: 100%;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: start;
            margin:20px;
        }

        h4 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            text-align: left;

        }

        h1 {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            text-align: left;
            
        }
        .buttons {
            display: flex;
            flex-direction: row;
        }
        .black-button {
            background-color: black;
            color: white;
            border: none;
            padding: 0.5rem 2rem;
            margin-right: 20px;
            cursor: pointer;
            border-radius:10px;
        }

        .white-button {
            background-color: white;
            color: black;
            border: 2px solid black;
           padding: 0.5rem 3rem;
            margin-right: 20px;
            cursor: pointer;
            border-radius:10px;
        }
    </style>
</head>
