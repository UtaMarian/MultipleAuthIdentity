@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/home.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            flex-direction: row;
            height: 90vh;
        }

        .image {
            width: 100% !important;
            height: 100%;
        }

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .content {
            width: 100%;
            height: 100%;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: start;
            margin:20px;
        }

        h4 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            text-align: left;

        }

        h1 {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            text-align: left;
            
        }
        .buttons {
            display: flex;
            flex-direction: row;
        }
        .black-button {
            background-color: black;
            color: white;
            border: none;
            padding: 0.5rem 2rem;
            margin-right: 20px;
            cursor: pointer;
            border-radius:10px;
        }

        .white-button {
            background-color: white;
            color: black;
            border: 2px solid black;
           padding: 0.5rem 3rem;
            margin-right: 20px;
            cursor: pointer;
            border-radius:10px;
        }

        .bus-img {
            width:400px;
            text-align:center;
            margin-left:400px;
        }


    </style>
</head>

    <div class="container">
        <div class="image">
            <img src="/images/bus2.png" alt="Image">
        </div>
        <div class="content">
            <h1>Transport public online</h1>
       @if(User.IsInRole("USER"))
        {
            <h4>Puteți alege prețul avantajos pentru biletul dumneavoastră și puteți călători rapid în orice oraș</h4>
        }
        else if (User.IsInRole("MODERATOR"))
        {
            <h4>Moderează cursele firmei tale într-o interfață simplă</h4>
        }
        else
        {
            <h4>Administrează aplicația și utilizatorii ei într-o interfață simplă</h4>
        }

        
        <div class="buttons">
        @if (User.IsInRole("MODERATOR"))
        {
            <button class="black-button">
                <a style="text-decoration: none;color: inherit;" asp-controller="Moderator" asp-action="Index">Gestioneaza cursele</a>
            </button>
        }
        else
        {
        <button class="black-button">
            <a style="text-decoration: none;color: inherit;" asp-controller="Tickets" asp-action="Index">Cumpără bilet</a>
        </button>    
        }
                
        @if (!User.Identity.IsAuthenticated)
        {
        <button class="white-button"><a style="text-decoration: none;color: inherit;" asp-area="Identity" asp-page="/Account/Login">Login</a></button>
        }
        </div>
        </div>
    
    </div>
    <footer></footer>
